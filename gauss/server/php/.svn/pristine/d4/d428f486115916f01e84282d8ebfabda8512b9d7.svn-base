<?php
namespace Site\Websocket\Website\Message;

use Lib\Websocket\Context;
use Lib\Config;
use Site\Websocket\CheckLogin;
/*
 * 网站管理--消息管理--会员公告
 * Website/Message/BulletinAdd {"title":"测试标题","publish":"1","layer_id":"0","start_time":"2018-12-10","stop_time":"2018-12-30","content":"测试公告内容测试的公告内容。测试公告内容，测试公告内容","image":""}
 * */

class BulletinAdd extends CheckLogin
{
    public function onReceiveLogined(Context $context, Config $config)
    {
        $StaffGrade = $context->getInfo("StaffGrade");
        if($StaffGrade != 0){
            $context->reply(["status"=>203,"当前账号没有操作权限"]);
            return;
        }
        $data = $context->getData();
        $mysql = $config->data_user;
        $mysql_staff = $config->data_staff;
        $title = $data["title"];
        $publish = $data["publish"];
        $layer_id = $data["layer_id"];
        $start_time = $data["start_time"];
        $stop_time = $data["stop_time"];
        $content = $data["content"];
        $cover = $data["image"];
        if(empty($title)){
            $context->reply(["status"=>205,"msg"=>"公告标题不能为空"]);
            return;
        }
        if(strlen($title)>100){
            $context->reply(["status"=>206,"msg"=>"公告标题太长"]);
            return;
        }
        if(empty($content)){
            $context->reply(["status"=>207,"msg"=>"内容描述不能为空"]);
            return;
        }
        if(!empty($start_time)){
            $start_time = strtotime($start_time);
        } else{
            $start_time = 0;
        }
        if(!empty($stop_time)){
            $stop_time = strtotime($stop_time);
        }else{
            $stop_time = 0;
        }
        if(!is_array($layer_id)){
            $context->reply(["status"=>210,"msg"=>"层级类型不正确"]);
            return;
        }
        foreach ($layer_id as $item){
            if(!is_numeric($item)){
                $context->reply(["status"=>211,"msg"=>"层级参数错误"]);
                return;
            }
            if(count($layer_id) == 1 && $item == 0){
                $layerData[] = [
                    "title"=>$title,
                    "layer_id"=>$item,
                    "start_time"=>$start_time,
                    "stop_time"=>$stop_time,
                    "cover"=>$cover?$cover:0,
                    "content"=>$content,
                    "publish"=>$publish==1?$publish:0,
                    "insert_time"=>time()
                ];
            }else{
                $layerData[] = [
                    "title"=>$title,
                    "layer_id"=>$item,
                    "start_time"=>$start_time,
                    "stop_time"=>$stop_time,
                    "cover"=>$cover?$cover:0,
                    "content"=>$content,
                    "publish"=>$publish==1?$publish:0,
                    "insert_time"=>time()
                ];
            }
        }
        $mysql->layer_message->load($layerData,[],"ignore");

        $context->reply(["status"=>200,"msg"=>"新增成功"]);
        //添加日志信息
        $sql = 'INSERT INTO operate_log SET staff_id=:staff_id, operate_key=:operate_key, detail=:detail,client_ip= :client_ip';
        $params = [
            ':staff_id' => $context->getInfo("StaffId"),
            ':client_ip' => ip2long($context->getClientAddr()),
            ':operate_key' => 'web_message',
            ':detail' =>'添加层级为'.$layer_id.'的会员公告信息',
        ];
        $mysql_staff->execute($sql, $params);
        $taskAdapter = new \Lib\Task\Adapter($config->cache_daemon);
        if($layer_id == 0){
            $sql = "SELECT client_id FROM user_session";
            $list = iterator_to_array($mysql->query($sql,$param));
        }else{
            $sql = "SELECT client_id FROM user_session WHERE layer_id=:layer_id";
            $param = ['layer_id' => $layer_id];
            $list = iterator_to_array($mysql->query($sql,$param));
        }
        foreach ($list as $row){
            $id = $row["client_id"];
            $taskAdapter->plan('NotifyApp', ['path'=>'Message/LayerMessage','data' =>['layer_id' => $layer_id,'id'=>$id]]);
        }


    }
}