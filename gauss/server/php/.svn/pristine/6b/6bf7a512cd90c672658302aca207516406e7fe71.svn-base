<?php
namespace Site\Websocket\Cash\WithdrawRecord;

use Site\Websocket\CheckLogin;
use Lib\Websocket\Context;
use Lib\Config;
/*
 * 现金系统-出款记录-已出款
 * 参数：Cash/WithdrawRecord/WithdrawnList
 * status 1等待入款 2入款成功 3入款失败
 * */

class WithdrawnList extends CheckLogin{
    public function onReceiveLogined(Context $context, Config $config)
    {
        $StaffGrade = $context->getInfo("StaffGrade");
        if($StaffGrade != 0){
            $context->reply(["status"=>203,"当前账号没有操作权限"]);
            return;
        }
        //验证是否有操作权限
        $auth = json_decode($context->getInfo('StaffAuth'));
        if(!in_array("money_withdraw_deal",$auth)){
            $context->reply(["status"=>202,"msg"=>"你还没有操作权限"]);
            return;
        }
        //代理层级列表
        $cache = $config->cache_site;
        $layer_list = json_decode($cache->hget("LayerList","allLayer"));

        $staffId = $context->getInfo('StaffId');
        $masterId = $context->getInfo("MasterId");
        $mysqlStaff = $config->data_staff;
        $data = $context->getData();
        $user_key = $data["user_key"];
        $layer_id = $data["layer_id"];
        $deal_serial = $data["withdraw_serial"];
        $start_launch_time = $data["start_launch_time"];
        $end_launch_time = $data["end_launch_time"];
        $min_money = $data["min_money"];
        $max_money = $data["max_money"];
        $status = $data["status"];
        $launch_time = '';
        $finish_time = '';
        $launch_money = '';
        $staff_name = isset($data['staff_name']) ? $data['staff_name'] : '';
        if(!empty($user_key)){
            $user_key = " AND user_key = '".$user_key."'";
        }
        if(!empty($deal_serial)){
            $deal_serial = " AND withdraw_serial = '".$deal_serial."'";
        }
        if(!empty($start_launch_time) && !empty($end_launch_time)){
            $launch_time = " AND launch_time BETWEEN ".strtotime($start_launch_time)." AND ".strtotime($end_launch_time);
        }
        if(!empty($min_money)){
            if(!is_numeric($min_money)){
                $context->reply(["status"=>204,"msg"=>"到账金额参数错误"]);
                return;
            }
            $launch_money = " AND launch_money >=".$min_money;
        }
        if(!empty($max_money)){
            if(!is_numeric($max_money)){
                $context->reply(["status"=>204,"msg"=>"到账金额参数错误"]);
                return;
            }
            $launch_money = " AND launch_money <=".$max_money;
        }

        if ($staff_name) {
            $staff_name = " AND (cancel_staff_name = '$staff_name' or finish_staff_name = '$staff_name')";
        }

        if(!empty($min_money) && !empty($max_money)){
            $launch_money = " AND launch_money BETWEEN ".$min_money." AND ".$max_money;
        }
        if(!empty($status)){
            if($status == 2){
                $status = " and cancel_time > 0";
            }elseif ($status ==1){
                $status = " AND finish_time > 0";    //已出款
            }else{
                $status = '';
            }
        }
        if(!empty($layer_id)){
            $layer_id = " AND layer_id = ".$layer_id;
        }
        $limit = " LIMIT 100";
        if($masterId != 0){
            $sql = "select withdraw_limit,layer_id_list from staff_info_intact where staff_id=:staff_id";
            $deposit_info = [];
            foreach ($mysqlStaff->query($sql,[":staff_id"=>$staffId]) as $row){
                $deposit_info =  $row;
            }
            $withdraw_limit = $deposit_info["withdraw_limit"];
            $layerLists = implode(",",json_decode($deposit_info["layer_id_list"],true));
        }
        if($masterId == 0){
            $sql = "SELECT user_id,withdraw_serial,user_key,layer_id,withdraw_money,bank_name,bank_branch,account_number,cancel_reason,".
                "account_name,FROM_UNIXTIME(launch_time) as launch_time,accept_staff_id,accept_staff_id,launch_device,finish_time,".
                "accept_staff_name,finish_staff_name,cancel_staff_name,".
                "cancel_time,accept_time FROM withdraw_intact WHERE (finish_time>0 OR cancel_time>0) and lock_type is null and reject_time is null".$user_key.$deal_serial.$launch_time.$finish_time.$launch_money.$status.$layer_id.$staff_name. ' order by launch_time desc ' . $limit ;
            $total_sql = "SELECT withdraw_serial FROM withdraw_intact WHERE (finish_time>0 OR cancel_time>0) and lock_type is null and reject_time is null".$user_key.$deal_serial.$launch_time.$finish_time.$launch_money.$status.$layer_id.$staff_name;
        }else{
            $sql = "SELECT user_id,withdraw_serial,user_key,layer_id,withdraw_money,bank_name,bank_branch,account_number,cancel_reason,".
                "account_name,FROM_UNIXTIME(launch_time) as launch_time,accept_staff_id,accept_staff_id,launch_device,finish_time,".
                "accept_staff_name,finish_staff_name,cancel_staff_name,".
                "cancel_time,accept_time FROM withdraw_intact WHERE (finish_time>0 OR cancel_time>0) and lock_type is null and reject_time is null AND layer_id in ($layerLists) and launch_money <= ".$withdraw_limit.$user_key.$deal_serial.$launch_time.$finish_time.$launch_money.$status.$layer_id.$staff_name. ' order by launch_time desc ' .$limit ;
            $total_sql = "SELECT withdraw_serial FROM withdraw_intact WHERE (finish_time>0 OR cancel_time>0) and lock_type is null and reject_time is null AND layer_id in ($layerLists) and launch_money <= ".$withdraw_limit.$user_key.$deal_serial.$launch_time.$finish_time.$launch_money.$status.$layer_id.$staff_name;
        }

        $total = 0;
        $withdraw_list = [];
        foreach ($config->deal_list as $deal) {
            $mysql = $config->__get("data_".$deal);
            $total += $mysql->execute($total_sql);
            $list = iterator_to_array($mysql->query($sql));
            if(!empty($list)){
                foreach ($list as $key=>$val){
                    $withdraw["user_id"] = $val["user_id"];
                    $withdraw["withdraw_serial"] = $val["withdraw_serial"];
                    $withdraw["user_key"] = $val["user_key"];
                    $withdraw["layer_id"] = $val["layer_id"];
                    $withdraw["layer_name"] = $context->getInfo($val["layer_id"])?:"该层级已被删除".$val["layer_id"];
                    $withdraw['bank_name'] = $val['bank_name'];
                    $withdraw["bank_branch"] = $val["bank_branch"];
                    $withdraw["account_number"] = $val["account_number"];
                    $withdraw["account_name"] = $val["account_name"];
                    $withdraw["withdraw_money"] = $val["withdraw_money"];
                    $withdraw["launch_time"] = $val["launch_time"];
                    $withdraw["accept_staff_name"] = $val["accept_staff_name"];
                    $withdraw["staff_key"] = "";
                    $withdraw["memo"] = "";
                    if(!empty($val["launch_time"]) && empty($val["finish_time"]) && empty($val["cancel_time"]) && empty($val["accept_time"])){
                        $withdraw["status"] = "等待出款";
                        $withdraw["staff_time"] = "";
                    }
                    if(!empty($val["accept_time"]) && empty($val["finish_time"]) && empty($val["cancel_time"])){
                        $withdraw["status"] = "正在出款";
                        $withdraw["staff_time"] = date("Y-m-d H:i:s",$val["accept_time"]);
                    }
                    if(!empty($val["finish_time"])){
                        $withdraw["status"] = "已出款";
                        $withdraw["staff_time"] = date("Y-m-d H:i:s",$val["finish_time"]);
                        $withdraw["staff_key"] = $val["finish_staff_name"];
                    }
                    if(!empty($val["cancel_time"])){
                        $withdraw["status"] = "出款失败";
                        $withdraw["staff_key"] = $val["cancel_staff_name"];
                        $withdraw["memo"] = $val["cancel_reason"];
                        $withdraw["staff_time"] = date("Y-m-d H:i:s",$val["cancel_time"]);
                    }
                    
                    if($val["launch_device"]==0){
                        $withdraw["launch_device"] = "PC";
                    }
                    if($val["launch_device"]==1){
                        $withdraw["launch_device"] = "WEB";
                    }
                    if($val["launch_device"]==2){
                        $withdraw["launch_device"] = "IOS APP";
                    }
                    if($val["launch_device"]==3){
                        $withdraw["launch_device"] = "Android APP";
                    }
                    $withdraw["deal_key"] = $deal;
                    $sqls = "SELECT * FROM withdraw_lock WHERE withdraw_serial=:withdraw_serial";
                    $param = [":withdraw_serial"=>$val["withdraw_serial"]];
                    $result = $mysql->execute($sqls,$param);
                    $withdraw["lock"] = $result>0 ? 1 : 0;
                    $withdraw_list[] = $withdraw;
                }
            }  
        }
        array_multisort(array_column($withdraw_list,'launch_time'), SORT_DESC, $withdraw_list);

        //记录日志
        $sql = 'INSERT INTO operate_log SET staff_id=:staff_id, operate_key=:operate_key, detail=:detail,client_ip= :client_ip';
        $params = [
            ':staff_id' => $staffId,
            ':client_ip' => ip2long($context->getClientAddr()),
            ':operate_key' => 'money_withdraw_deal',
            ':detail' =>'查看未出款记录',
        ];
        $staff_mysql = $config->data_staff;
        $staff_mysql->execute($sql, $params);
        $context->reply(["status"=>200,"msg"=>"获取成功","layer_list"=>$layer_list,"total"=>$total,"list"=>$withdraw_list]);
    }
}
