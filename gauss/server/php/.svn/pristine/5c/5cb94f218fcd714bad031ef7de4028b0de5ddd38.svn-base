<?php
namespace App\Websocket\User\Recharge;

use App\Websocket\CheckLogin;
use Lib\Websocket\Context;
use Lib\Config;

/*
 * 微信充值通道id
 * User/Recharge/WechatList
 *
 * */

class WechatList extends CheckLogin
{
    public function onReceiveLogined(Context $context, Config $config)
    {
        $guest_id = $context->getInfo("GuestId");
        if(!empty($guest_id)){
            $context->reply(["status"=>500,"msg"=>"游客身份，没有访问权限"]);
            return;
        }
        
        $mysql = $config->data_staff;
        $layer_id = $context->getInfo("LayerId");
        $sql = "SELECT passage_id,passage_name,gate_key,risk_control,gate_name,account_number,account_name,min_money,max_money,way_map FROM deposit_route_gateway_intact WHERE find_in_set(:layer_id,layer_id_list) AND passage_acceptable=1 AND gate_key='weixin'";
        $param = [":layer_id"=>$layer_id];
        $list = iterator_to_array($mysql->query($sql,$param));
        $context->reply(["status"=>200,"msg"=>"获取成功","list"=>$list]);
    }
}