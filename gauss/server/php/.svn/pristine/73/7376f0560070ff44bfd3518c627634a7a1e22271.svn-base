                    $allList[$val["model_key"]]["bet_count_rate"] = $allList[$val["model_key"]]["bet_count"]/$list["bet_count"];
                }
                if($val["model_key"] == "ladder"){
                    $allList[$val["model_key"]]["bet_amount"] += $lotteryInfo['bet_amount'];
                    $allList[$val["model_key"]]["bet_count"] += $lotteryInfo['bet_count'];
                    $allList[$val["model_key"]]["bonus_amount"] += $lotteryInfo['bonus_amount'];
                    $allList[$val["model_key"]]["profit_amount"] += $lotteryInfo['profit_amount'];
                    $allList[$val["model_key"]]["bet_rate"] = $allList[$val["model_key"]]["bet_amount"]/$list["bet_amount"];
                    $allList[$val["model_key"]]["bet_count_rate"] = $allList[$val["model_key"]]["bet_count"]/$list["bet_count"];
                }
                if($val["model_key"] == "lucky"){
                    $allList[$val["model_key"]]["bet_amount"] += $lotteryInfo['bet_amount'];
                    $allList[$val["model_key"]]["bet_count"] += $lotteryInfo['bet_count'];
                    $allList[$val["model_key"]]["bonus_amount"] += $lotteryInfo['bonus_amount'];
                    $allList[$val["model_key"]]["profit_amount"] += $lotteryInfo['profit_amount'];
                    $allList[$val["model_key"]]["bet_rate"] = $allList[$val["model_key"]]["bet_amount"]/$list["bet_amount"];
                    $allList[$val["model_key"]]["bet_count_rate"] = $allList[$val["model_key"]]["bet_count"]/$list["bet_count"];
                }
                if($val["model_key"] == "racer"){
                    $allList[$val["model_key"]]["bet_amount"] += $lotteryInfo['bet_amount'];
                    $allList[$val["model_key"]]["bet_count"] += $lotteryInfo['bet_count'];
                    $allList[$val["model_key"]]["bonus_amount"] += $lotteryInfo['bonus_amount'];
                    $allList[$val["model_key"]]["profit_amount"] += $lotteryInfo['profit_amount'];
                    $allList[$val["model_key"]]["bet_rate"] = $allList[$val["model_key"]]["bet_amount"]/$list["bet_amount"];
                    $allList[$val["model_key"]]["bet_count_rate"] = $allList[$val["model_key"]]["bet_count"]/$list["bet_count"];
                }
                if($val["model_key"] == "six"){
                    $allList[$val["model_key"]]["bet_amount"] += empty($lotteryInfo['bet_amount']) ? 0 : $lotteryInfo['bet_amount'];
                    $allList[$val["model_key"]]["bet_count"] += empty($lotteryInfo['bet_count']) ? 0 : $lotteryInfo['bet_count'];
                    $allList[$val["model_key"]]["bonus_amount"] += empty($lotteryInfo['bonus_amount']) ? 0 : $lotteryInfo['bonus_amount'];
                    $allList[$val["model_key"]]["profit_amount"] += empty($lotteryInfo['profit_amount']) ? 0 : $lotteryInfo['profit_amount'];
                    $allList[$val["model_key"]]["bet_rate"] = $allList[$val["model_key"]]["bet_amount"]/$list["bet_amount"];
                    $allList[$val["model_key"]]["bet_count_rate"] = $allList[$val["model_key"]]["bet_count"]/$list["bet_count"];
                }
                if($val["model_key"] == "tiktok"){
                    $allList[$val["model_key"]]["bet_amount"] += $lotteryInfo['bet_amount'];
