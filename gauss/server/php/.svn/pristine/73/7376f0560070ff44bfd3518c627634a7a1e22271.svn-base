                    $allList[$val["model_key"]]["profit_amount"] += $lotteryInfo['profit_amount'];
                    $allList[$val["model_key"]]["bet_rate"] = $allList[$val["model_key"]]["bet_amount"]/$list["bet_amount"];
                    $allList[$val["model_key"]]["bet_count_rate"] = $allList[$val["model_key"]]["bet_count"]/$list["bet_count"];
                    
