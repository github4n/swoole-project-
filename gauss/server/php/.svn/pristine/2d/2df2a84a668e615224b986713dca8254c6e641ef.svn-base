                $dividend_profit = (($row["wager_amount"]-$row["profit_amount"]-$row["coupon_amount"]-$row["rebate_amount"]-$row["brokerage_amount"]-$row["subsidy_amount"])-($row["wager_amount"]-$row["profit_amount"])*$tax_rate/100)*$profit_rate/100*$fee_rate/100;
            }else{
                //查股东
                $minor_sql = "select grade3_bet_rate,grade3_profit_rate,grade3_fee_rate,grade3_tax_rate ".
                    "from dividend_setting where scope_staff_id=:scope_staff_id";
