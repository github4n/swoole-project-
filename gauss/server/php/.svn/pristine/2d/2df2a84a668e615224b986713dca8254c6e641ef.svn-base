        foreach ($mysqlReport->query($agent_sql,[":monthly"=>$monthly]) as $row){
            //查总代理
            $agent_sql = "select grade3_bet_rate,grade3_profit_rate,grade3_fee_rate,grade3_tax_rate ".
                "from dividend_setting where scope_staff_id=:scope_staff_id";
            $agent = [];
