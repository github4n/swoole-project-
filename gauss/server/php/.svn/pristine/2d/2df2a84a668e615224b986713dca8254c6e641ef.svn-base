                "bet_amount"=>$row["wager_amount"], //有效投注总额
                "profit_amount"=>$row["profit_amount"],//损益总额
                "bet_rate"=>$bet_rate, //投注分红比例
                "profit_rate"=>$profit_rate,  //损益分红比例
                "fee_rate"=>$fee_rate, //行政费比例
