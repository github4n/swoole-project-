<?php
namespace Site\Websocket\Account\Staff;

use Lib\Websocket\Context;
use Lib\Config;
use Site\Websocket\CheckLogin;
/*
 * 员工修改信息
 *   Account/Staff/StaffEdit {"staff_id":302}
 * */

class StaffEdit extends CheckLogin
{
    public function onReceiveLogined(Context $context, Config $config)
    {
        //验证是否有操作权限
        $auth = json_decode($context->getInfo('StaffAuth'));
        if(!in_array("slave_list_update",$auth)){
            $context->reply(["status"=>202,"msg"=>"你还没有操作权限"]);
            return;
        }
        $data = $context->getData();
        if(empty($data)){
            $context->reply(["status"=>211,"msg"=>"参数错误"]);
            return;
        }
        $staff_id = $data['staff_id'];
        if(!is_numeric($staff_id)){
            $context->reply(["status"=>203,"msg"=>"参数错误"]);
            return;
        }
        $info = array();
        $layer_info = array();
        $operate_info = array();
        $mysql = $config->data_staff;
        $user_mysql = $config->data_user;
        $staffId = $context->getInfo('StaffId');
        $MasterId = $context->getInfo("MasterId");
        //获取当前修改的账号的基本信息
        $sql = "SELECT staff_name,staff_key,deposit_limit,withdraw_limit FROM staff_info_intact WHERE staff_id=:staff_id";
        $param = [":staff_id"=>$staff_id];
        try{
            foreach ($mysql->query($sql,$param) as $row){
                $info = $row;
            }
        }catch(\PDOException $e){
            $context->reply(["status"=>400,"msg"=>"获取失败"]);
            throw new \PDOException("查询用户的基本信息sql run error".$e);
        }
        //获取要修改的账号的管理等级的信息
        $sql = "SELECT layer_id FROM staff_layer WHERE staff_id = :staff_id";
        try{
            foreach ($mysql->query($sql,$param) as $row){
                $layer_info[] = $row['layer_id'];
            }
        }catch(\PDOException $e){
            $context->reply(["status"=>400,"msg"=>"获取失败"]);
            throw new \PDOException('查找会员层级的sql run error'.$e);
        }
        //需要修改的用户的操作权限
        $sql = "SELECT operate_key FROM staff_permit WHERE staff_id = :staff_id";
        try{
            foreach ($mysql->query($sql,$param) as $row){
                $operate_info[] = $row['operate_key'];
            }
        }catch(\PDOException $e){
            $context->reply(["status"=>400,"msg"=>"获取失败"]);
            throw new \PDOException("获取用户的操作的权限sql run error".$e);
        }
        if(!empty($MasterId)){
            //当前账号管理会员的信息
            $sql = "SELECT layer_id FROM staff_layer WHERE staff_id=:staff_id";
            $param = [":staff_id"=>$staffId];
            foreach ($mysql->query($sql,$param) as $rows){
                $layer_list[] = $rows;
            }
            $user_layer = array();
            $agent_layer = array();
            if(!empty($layer_list)){
                foreach ($layer_list as $key=>$val){
                    $sql = "SELECT layer_id,layer_name,layer_type FROM layer_info WHERE layer_id=:layer_id";
                    $param = [":layer_id"=>$val["layer_id"]];
                    foreach ($user_mysql->query($sql,$param) as $row){
                        $user = $row;
                    }
                    if($user["layer_type"]<3){
                        $user_layer[$key]["layer_name"] = $user["layer_name"];
                        $user_layer[$key]["layer_id"] = $user["layer_id"];
                    }
                    if($user["layer_type"]>100){
                        $agent_layer[$key]["layer_name"] = $user["layer_name"];
                        $agent_layer[$key]["layer_id"] = $user["layer_id"];
                    }
                }
            }
            sort($agent_layer,1);
            sort($user_layer,1);
        } else{
            $user_layer = json_decode($context->getInfo("UserLayer"));
            if(empty($user_layer)) {
                $user_layer = $this->userList($context,$config);
            }
            //代理层级
            $agent_layer = json_decode($context->getInfo("AgentLayer"));
            if(empty($agent_layer)){
                $agent_layer = $this->agentList($context,$config);
            }
        }
        //权限分配
        $sql = "SELECT * FROM staff_permit WHERE staff_id = :staff_id";
        $param = [":staff_id"=>$staffId];
        foreach ($mysql->query($sql,$param) as $row){
            $operate[] = $row;
        }
        if(!empty($operate)){
            foreach ($operate as $k=>$v){
                $sql = "SELECT operate_name,operate_key FROM operate WHERE operate_key=:operate_key ";
                $param = [":operate_key"=>$v["operate_key"]];
                foreach ($mysql->query($sql,$param) as $rows){
                    $operates = $rows;
                }
                $operate_list[$k]["operate_key"] = $operates["operate_key"];
                $operate_list[$k]["operate_name"] = $operates["operate_name"];
            }
        }
        $info["level_list"] = $layer_info;
        $info["operate_list"] = $operate_info;
        $context->reply([
            "status"=>200,
            "msg"=>"获取成功",
            "info"=>$info,
            "user_layer" => $user_layer,
            "agent_layer" => $agent_layer,
            "operate_list" => $operate_list,

        ]);

    }
}